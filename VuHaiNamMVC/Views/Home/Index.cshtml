@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Home - Latest News";
}

<div class="container mt-4">
    <h2 class="text-primary text-center mb-4">
        📰 Tin tức mới nhất
    </h2>

    <div class="table-responsive shadow-sm">
        <table class="table table-hover table-bordered align-middle">
            <thead class="table-dark text-center">
                <tr>
                    <th scope="col">📌 Tiêu đề</th>
                    <th scope="col">📝 Tóm tắt</th>
                    <th scope="col">📂 Danh mục</th>
                    <th scope="col">📅 Ngày tạo</th>
                    <th scope="col">👤 Người đăng</th>
                    <th scope="col">🔍 Hành động</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var article in Model)

                {
                    <tr>
                        <td>
                            <a asp-controller="Home" asp-action="ViewNews" asp-route-id="@article.NewsArticleId"
                               class="text-decoration-none fw-semibold text-primary">
                                @article.NewsTitle
                            </a>
                        </td>
                        <td>@article.Headline</td>
                        <td>@article.CategoryName</td>
                        <td class="text-center">
                            @article.CreatedDate?.ToString("dd/MM/yyyy")
                        </td>
                        <td>@article.CreatedByName</td>
                        <td class="text-center">
                            <a class="btn btn-sm btn-outline-info"
                               asp-controller="Home" asp-action="ViewNews" asp-route-id="@article.NewsArticleId">
                                👁️ Xem
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

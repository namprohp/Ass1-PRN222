@model VuHaiNamMVC.Models.NewsArticle

@{
    ViewData["Title"] = "Chi tiết bài viết";
}

<h2 class="text-primary mb-4">Chi tiết bài viết</h2>

<table class="table table-striped table-bordered shadow-sm">
    <tbody>
        <tr>
            <th class="w-25">Tiêu đề</th>
            <td>@Model.NewsTitle</td>
        </tr>
        <tr>
            <th>Tiêu điểm</th>
            <td>@Model.Headline</td>
        </tr>
        <tr>
            <th>Ngày tạo</th>
            <td>@Model.CreatedDate?.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <th>Nội dung</th>
            <td style="white-space: pre-wrap;">@Model.NewsContent</td>
        </tr>
        <tr>
            <th>Nguồn</th>
            <td>@Model.NewsSource</td>
        </tr>
        <tr>
            <th>Chuyên mục</th>
            <td>@(Model.Category != null ? Model.Category.CategoryName : "<span class='text-muted'>Không có</span>")</td>
        </tr>
        <tr>
            <th>Người tạo</th>
            <td>@(Model.CreatedBy != null ? Model.CreatedBy.AccountName : "<span class='text-muted'>Không xác định</span>")</td>
        </tr>
        <tr>
            <th>Người chỉnh sửa</th>
            <td>@ViewBag.UpdatedByName</td>
        </tr>
        <tr>
            <th>Ngày chỉnh sửa</th>
            <td>@Model.ModifiedDate?.ToString("dd/MM/yyyy")</td>
        </tr>
        <tr>
            <th>Trạng thái</th>
            <td>
                @if (Model.NewsStatus == true)

                {
                    <span class="badge bg-success">Đã duyệt</span>
                }

                else

                {
                    <span class="badge bg-warning text-dark">Chờ duyệt</span>
                }
            </td>
        </tr>
    </tbody>
</table>

<a class="btn btn-secondary mt-3" asp-action="ManageNewsArticle">Quay lại</a>
